@import 'nib'
@import 'vars'

reset-html5()
reset-table()
reset-table-cell()

*
  -moz-box-sizing: border-box
  box-sizing: border-box

html
  font-size: font_size + 2
  font-family: font_text
  margin: 0px

.wf-active
  font-size: font_size
  font-family: "Merriweather", font_text

body
  background-color: #F8F5EF
  color: colour_text

a
  color: colour_link

  &:hover
    color: colour_hover

#main-container
  max-width: width_main
  margin: 0 auto
  padding: 0 font_size